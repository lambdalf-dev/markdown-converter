{
  "manifest_version": 3,
  "name": "Web Crawler - Markdown Converter",
  "version": "1.0.0",
  "description": "Convert web pages to downloadable markdown format",
  "permissions": [
    "activeTab",
    "storage",
    "downloads"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Convert to Markdown"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "icons": {
    "16": "assets/icon-16.png",
    "128": "assets/icon-128.png"
  }
}